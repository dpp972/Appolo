{% extends 'AppoloBackOfficeBundle:Default:base_bo.html.twig' %}

{% block content %}
<h1>{{name}}</h1>


<div style="margin-top : 20px;">
    {% if name == 'categorie' %}
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th><input type="checkbox" name="" /></th>
                    <th>id</th>
                    <th>Libellé</th>
                    <th>action</th>
                </tr>
            </thead>
            <tbody>
                    <tr>
                        <td><input type="checkbox" name="" /></td>
                        <td>{{item.idCategorie}}</td>
                        <td>{{item.libelleCategorie}}</td>
                    </tr>
            </tbody>
        </table>
    {% endif %}
    
    {% if name == 'produit' %}
        <table class="table table-striped table-bordered table-condensed">
        
            <thead>
                <tr>
                    <th><input type="checkbox" name="" /></th>
                    <th>id</th>
                    <th>Reference</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                
                    <tr>
                        <td><input type="checkbox" name="" /></td>
                        <td>{{item.idProduit}}</td>
                        <td>{{item.refProduit}}</td>
                    </tr>
                
            </tbody>
        </table>
    {% endif %}
    
    {% if name == 'modele' %}
        <table class="table table-striped table-bordered table-condensed">
        
    <thead>
        <tr>
            <th><input type="checkbox" name="" /></th>
            <th>id</th>
            <th>libelle du modele</th>
            <th>desciption du modele</th>
            <th>Prix</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td><input type="checkbox" name="" /></td>
                <td>{{item.idMdLP}}</td>
                <td>{{item.nomMdlP}}</td>
                <td>{{item.descriptionMdlP}}</td>
                <td>{{item.prixMdLP}}</td>
                <td><a href="{{ path('appolo_back_office_get', {'type': 'modele','id' : item.idMdLP }) }}">editer</a> |
                    <a href="{{ path('appolo_back_office_delete', {'type': 'modele','id' : item.idMdLP }) }}">supprimer</a></td>
            </tr>
    </tbody>
</table>
    {% endif %}
    
    {% if name == 'user' %}
        <table class="table table-striped table-bordered table-condensed">
        
    <thead>
        <tr>
            <th><input type="checkbox" name="" /></th>
            <th>ID</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Identifiant</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        
            <tr>
                <td><input type="checkbox" name="" /></td>
                <td>{{item.iduser}}</td>
                <td>{{item.nomuser}}</td>
                <td>{{item.prenomuser}}</td>
                <td>{{item.identifiantuser}}</td>
                 <td>{{item.emailuser}}</td>
                <td><a href="{{ path('appolo_back_office_get', {'type': 'user','id' : item.iduser }) }}">editer</a> |
                    <a href="{{ path('appolo_back_office_delete', {'type': 'user','id' : item.iduser }) }}">supprimer</a></td>
            </tr>
    </tbody>
</table>
    {% endif %}
    
    {% if name == 'role' %}
        <table class="table table-striped table-bordered table-condensed">
        
    <thead>
        <tr>
            <th><input type="checkbox" name="" /></th>
            <th>id</th>
            <th>libellé</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td><input type="checkbox" name="" /></td>
                <td>{{item.idRoleUs}}</td>
                <td>{{item.libelleRoleUs}}</td>
                <td><a href="{{ path('appolo_back_office_get', {'type': 'role','id' : item.idRoleUs }) }}">editer</a> |
                    <a href="{{ path('appolo_back_office_delete', {'type': 'role','id' : item.idRoleUs }) }}">supprimer</a></td>
            </tr>
    </tbody>
</table>
    {% endif %}
    
    {% if name == 'boutique' %}
        {% include 'AppoloBackOfficeBundle:Admin:tabBoutique.html.twig' %}
    {% endif %}
    
{% endblock %}
